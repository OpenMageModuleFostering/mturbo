<config>
    <modules>
        <Artio_MTurbo>
            <version>0.1.0</version>
        </Artio_MTurbo>
    </modules>
    <admin>
        <routers>
			<mturbo>
				<use>admin</use>
				<args>
					<module>Artio_MTurbo</module>
					<frontName>mturbo</frontName>
				</args>
			</mturbo>
        </routers>
    </admin>
    <adminhtml>
    	<translate>
            <modules>
                <Artio_MTurbo>
                    <files>
                        <default>Artio_MTurbo.csv</default>
                    </files>
                </Artio_MTurbo>
            </modules>
     	</translate>
    	<menu>
			<system>
				<children>
					<mturbo translate="title" module="mturbo">
						<title>M-Turbo Management</title>
						<action>mturbo/adminhtml_check</action>
						<sort_order>91</sort_order>
					</mturbo>
				</children>
		</system>  
		</menu>    
		<layout>
			<updates>
				<mturbo>
					<file>mturbo.xml</file>
				</mturbo>
			</updates>
		</layout>
		<events>
            <catalog_product_save_commit_after>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>afterSaveProduct</method>
                    </mturbo>
                </observers>
            </catalog_product_save_commit_after>
            <catalog_category_save_before>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>beforeSaveCategory</method>
                    </mturbo>
                </observers>
            </catalog_category_save_before>
            <catalog_category_save_commit_after>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>afterSaveCategory</method>
                    </mturbo>
                </observers>
            </catalog_category_save_commit_after>
            <core_abstract_save_commit_after>
            	<observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>afterSaveCommitUrl</method>
                    </mturbo>
                </observers>
            </core_abstract_save_commit_after>
            <admin_session_user_login_success>
            	<observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>adminLogin</method>
                    </mturbo>
                </observers>
            </admin_session_user_login_success>
		</events>
    </adminhtml>
    <frontend>
    	<events>
            <customer_login>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>customerLogin</method>
                    </mturbo>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>customerLogout</method>
                    </mturbo>
                </observers>
            </customer_logout>
            <core_block_abstract_prepare_layout_after>
            	<observers>
                    <mturbo>
                        <class>mturbo/observer</class>
                        <method>systemCheck</method>
                    </mturbo>
                </observers>
            </core_block_abstract_prepare_layout_after> 
        </events>
    </frontend>   
    <global>
       <models>
            <mturbo>
                <class>Artio_MTurbo_Model</class>
                <resourceModel>mturbo_mysql4</resourceModel>
            </mturbo>
           	<mturbo_mysql4>
                <class>Artio_MTurbo_Model_Mysql4</class>
                <entities>
                    <mturbo>
                        <table>mturbo</table>
                    </mturbo>
                </entities>
            </mturbo_mysql4>
        </models>
        <resources>
            <mturbo_setup>
                <setup>
                    <module>Artio_MTurbo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mturbo_setup>
            <mturbo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mturbo_write>
            <mturbo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mturbo_read>
        </resources>
        <blocks>
            <mturbo>
                <class>Artio_MTurbo_Block</class>
            </mturbo>
        </blocks>
        <helpers>
            <mturbo>
                <class>Artio_MTurbo_Helper</class>
            </mturbo>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <mturbo_mturbo>
                <run>
                    <model>mturbo/observer::automaticDownload</model>
                </run>
            </mturbo_mturbo>
        </jobs>
    </crontab>
</config>